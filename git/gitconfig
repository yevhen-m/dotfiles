[user]
	email = yvhn.yvhn@gmail.com
	name = yevhen-m
[core]
    pager = delta
	excludesfile = ~/.gitignore_global
	editor = nvim
[delta]
    navigate = true
    light = false
    side-by-side = false
    line-numbers = true
    paging = never
    features = catppuccin-macchiato
[include]
    path = ~/Cloned/catppuccin-delta/catppuccin.gitconfig
[interactive]
    diffFilter = delta --color-only
[push]
	default = simple
[diff]
    colorMoved = default
[alias]
    amend = commit -a --amend --no-edit
	ss = status -s
	s = status
	stash-unapply = !git stash show -p | git apply -R
    fix = commit --fixup
    squ = commit --squash
	lg = log --color --graph --pretty=format:'%C(yellow)%d%Creset %Cred%h%Creset %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset %s' --abbrev-commit
[merge]
    conflictstyle = diff3
[color "branch"]
	current = blue
	local = yellow
	remote = green
[color "diff"]
	meta = blue
	frag = magenta
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = red
[pull]
	rebase = true
[fetch]
	prune = true
[mergetool]
	prompt = true
[clean]
	requireForce = false
[rebase]
	autoSquash = true
[url "git@github.com:"]
	insteadOf = https://github.com/
